extends layout

block content
    .w3-card-4
        header.w3-container.w3-teal
            h1
                span Lista Compositores   
                a.w3-btn.w3-round.w3-grey(href="/compositores/registo") +
                a.w3-btn.w3-round.w3-blue(href="/periodos") Lista de Periodos

        .w3-container
            table.w3-table-all
                tr
                    th Nome
                    th Data Nascimento
                    th Data Obito
                    th Período
                    th Ações
                each compositor in lCompositores
                    tr
                        td
                            a(href="/compositores/" + compositor._id)= compositor.nome
                        td= compositor.dataNasc
                        td= compositor.dataObito
                        td
                            a(href="/periodos/" + compositor.periodo)= compositor.periodo
                        td
                            span [
                            a(href="/compositores/edit/" + compositor._id) Edit
                            span ]
                            span [
                            a(href="/compositores/delete/" + compositor._id) Delete
                            span ]
        footer.w3-container.w3-blue
            h5 Generated by Lucas Oliveira