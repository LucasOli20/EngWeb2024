extends layout

block content
    .w3-card-4
        header.w3-container.w3-purple
            h2 Compositor Form
        form.w3-container(method="POST")
            fieldset 
                label Id
                input.w3-input.w3-round(type="text" name="_id" required)
                label Nome
                input.w3-input.w3-round(type="text" name="nome" required)
                label Data Nascimento
                input.w3-input.w3-round(type="text" name="dataNasc")
                label Data Obito
                input.w3-input.w3-round(type="text" name="dataObito")
                label Biografia
                textarea.w3-input.w3-border.w3-round(name="bio")
                label Periodo
                each periodo in Periodos
                    br
                    input.w3-input.w3-border.w3-round(id=periodo._id type="radio" name="periodo" value=periodo.designacao required)
                    label(for=periodo._id)= periodo.designacao

            br
            button.w3-btn.w3-green.w3-mb-2(type="submit") 
                b Registar
            a.w3-button.w3-teal(href="/compositores")
                b Voltar Ã  lista de Compositores

            footer.w3-container.w3-purple
                h5 Generated by Lucas Oliveira
