extends layout

block content
    .w3-card-4
        header.w3-container.w3-teal
            h1
                span Lista Periodos   
                a.w3-btn.w3-round.w3-grey(href="/periodos/registo") +
                a.w3-btn.w3-round.w3-blue(href="/compositores") Lista de Compositores

        .w3-container
            table.w3-table-all
                tr
                    th ID
                    th Designação
                    th Ações
                each periodo in lPeriodos
                    tr
                        td= periodo.id
                        td
                            a(href="/periodos/" + periodo.designacao)= periodo.designacao
                        td
                            span [
                            a(href="/periodos/edit/" + periodo.id) Edit
                            span ]
                            span [
                            a(href="/periodos/delete/" + periodo.id) Delete
                            span ]
        footer.w3-container.w3-blue
            h5 Generated by Lucas Oliveira