extends layout

block content
    .w3-card-4
        header.w3-container.w3-purple
            h2 Compositor Form
        form.w3-container(method="POST")
            fieldset 
                label Id
                input.w3-input.w3-round(type="text" name="id" value=Compositor.id readonly)
                label Nome
                input.w3-input.w3-round(type="text" name="nome" value=Compositor.nome)
                label Data Nascimento
                input.w3-input.w3-round(type="text" name="dataNasc" value=Compositor.dataNasc)
                label Data Obito
                input.w3-input.w3-round(type="text" name="dataObito" value=Compositor.dataObito)
                label Biografia
                textarea.w3-input.w3-border.w3-round(name="bio")= Compositor.bio 
                label Periodo
                input.w3-input.w3-round(type="text" name="periodo" value=Compositor.periodo readonly)
                
            br
            button.w3-btn.w3-green.w3-mb-2(type="submit") 
                b Guardar
            a.w3-button.w3-teal(href="/compositores")
                b Voltar Ã  lista de Compositores

            footer.w3-container.w3-purple
                h5 Generated by Lucas Oliveira
