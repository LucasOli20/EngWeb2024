extends layout

block content
    .w3-card-4
        header.w3-container.w3-purple
            h2 Periodo Form
        form.w3-container(method="POST")
            fieldset 
                label Id
                input.w3-input.w3-round(type="text" name="id" value=Periodo.id readonly)
                label Designação
                input.w3-input.w3-round(type="text" name="designacao" value=Periodo.designacao)
                
            br
            button.w3-btn.w3-green.w3-mb-2(type="submit") 
                b Guardar
            a.w3-button.w3-teal(href="/periodos")
                b Voltar à lista de Periodos

            footer.w3-container.w3-purple
                h5 Generated by Lucas Oliveira
